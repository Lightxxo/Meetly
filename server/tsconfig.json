{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",           // Include all ts files inside the server directory and subdirectories
    "**/*.js"            // Include all js files inside the server directory and subdirectories
, "models/index.ts"  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
