{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.d.ts",
    "types/**/*.d.ts", 
    "models/index.ts",

  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
